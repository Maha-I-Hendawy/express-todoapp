<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title></title>
</head>
<body>
	<div>
		<h1>Home Page</h1>
		<form action="" method="post">
			<input type="text" name="todo">
			<input type="submit" value="Add">
		</form>
	</div>
	<ul>
		<% data.forEach( entry => {%>

		   <li><a href="/gettodo/<%= entry.todo_id %>"><%= entry.todo %></a></li>
		    <a href="/update/<%= entry.todo_id %>">Update</a>
		   <a href="/delete/<%= entry.todo_id %>">Delete</a>


		<% }) %>
		
	</ul>

</body>
</html>